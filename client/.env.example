# ============================================
# SELLO FRONTEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# Note: Vite requires VITE_ prefix for all variables

# ============================================
# API CONFIGURATION
# ============================================
# Backend API URL (include /api if your backend serves from /api)
VITE_API_URL=http://localhost:4000/api

# Production API URL (uncomment when deploying)
# VITE_API_URL=https://your-production-backend.com/api

# ============================================
# GOOGLE OAUTH - PUBLIC CLIENT ID ONLY
# ============================================
# This is safe to expose as it's a public client ID
# Never expose client secrets on the frontend
VITE_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# ============================================
# OPENROUTE SERVICE API (Optional)
# ============================================
# For routing calculations - can be left empty to use Google Maps through backend
VITE_ORS_API_KEY=your-ors-api-key

# ============================================
# FRONTEND URLS
# ============================================
# Used for generating invite links, redirects, etc.
VITE_FRONTEND_URL=http://localhost:5173
VITE_SITE_URL=http://localhost:5173

# ============================================
# SUPPORT & CONTACT
# ============================================
VITE_SUPPORT_EMAIL=support@yourdomain.com

# ============================================
# ERROR TRACKING (Optional)
# ============================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

