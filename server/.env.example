# ============================================
# SELLO BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4000

# ============================================
# DATABASE
# ============================================
MONGO_URI=mongodb://127.0.0.1:27017/sello-db

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_EXPIRES_IN=7d

# ============================================
# CORS & CLIENT URLS
# ============================================
CLIENT_URL=http://localhost:5173,http://127.0.0.1:5173
FRONTEND_URL=http://localhost:5173
PRODUCTION_URL=https://your-production-domain.com

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_NAME=Sello

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_MAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# ============================================
# CLOUDINARY (Image Upload)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# PAYMENT GATEWAYS
# ============================================
# Payment Gateway Selection: stripe, payfast, jazzcash
PAYMENT_GATEWAY=stripe

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# PayFast Configuration (for South Africa)
PAYFAST_MERCHANT_ID=your-payfast-merchant-id
PAYFAST_MERCHANT_KEY=your-payfast-merchant-key
PAYFAST_URL=https://sandbox.payfast.co.za

# JazzCash Configuration (for Pakistan)
JAZZCASH_MERCHANT_ID=your-jazzcash-merchant-id
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_URL=https://sandbox.jazzcash.com.pk

# ============================================
# GOOGLE MAPS API
# ============================================
# Secure Google Maps API key (server-side only)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# SMS VERIFICATION (Twilio)
# ============================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# FEATURES & OPTIONS
# ============================================
# Enable cron jobs for background tasks (true/false)
ENABLE_CRON_JOBS=false

# Enable email notifications (true/false)
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable image quality validation (true/false)
ENABLE_IMAGE_QUALITY_VALIDATION=false

# ============================================
# LOGGING & DEBUGGING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Debug authentication (show user not found errors in development)
# WARNING: Only enable in development for testing
DEBUG_AUTH=false

