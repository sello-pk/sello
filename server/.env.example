# ============================================
# SELLO BACKEND - ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4000

# ============================================
# DATABASE
# ============================================
MONGO_URI=mongodb://127.0.0.1:27017/sello-db

# Optional: Redis for caching and sessions
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# ============================================
# JWT AUTHENTICATION (REQUIRED)
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_EXPIRES_IN=7d

# ============================================
# CORS & CLIENT URLS
# ============================================
# Single frontend URL configuration (comma-separated for multiple origins)
CLIENT_URL=http://localhost:5173
PRODUCTION_URL=https://your-production-domain.com

# ============================================
# SITE CONFIGURATION
# ============================================
SITE_NAME=Sello
SUPPORT_EMAIL=support@yourdomain.com

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_MAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
ENABLE_EMAIL_NOTIFICATIONS=true

# ============================================
# CLOUDINARY (Image Upload)
# ============================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ============================================
# PAYMENT GATEWAY (STRIPE ONLY)
# ============================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# ============================================
# FEATURES & OPTIONS
# ============================================
# Enable cron jobs for background tasks (true/false)
ENABLE_CRON_JOBS=false

# Enable image quality validation (true/false)
ENABLE_IMAGE_QUALITY_VALIDATION=false

# ============================================
# LOGGING & DEBUGGING
# ============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Debug authentication (show user not found errors in development)
# WARNING: Only enable in development for testing
DEBUG_AUTH=false

# ============================================
# DEPLOYMENT NOTES
# ============================================
# 1. Set NODE_ENV=production in production
# 2. Use strong, unique JWT_SECRET in production
# 3. Configure CLIENT_URL for your frontend domain(s)
# 4. Set up proper email credentials for notifications
# 5. Configure Stripe with production keys
# 6. Use environment-specific database URLs
# 7. Never commit .env files to version control
# 8. Use single CLIENT_URL for all frontend references

# ============================================
# VARIABLES ACTUALLY USED IN CODEBASE:
# ============================================
# CORE SERVER:
# - NODE_ENV - Used throughout server for environment detection
# - PORT - Used in server.js, config/index.js
# - MONGO_URI - Used in config/index.js, database connection
# - REDIS_URL/REDIS_HOST/REDIS_PORT/REDIS_PASSWORD - Used in utils/redis.js
# - JWT_SECRET - Used in auth middleware, token refresh, config/index.js
# - JWT_ACCESS_EXPIRES_IN - Used in token refresh middleware
# - JWT_EXPIRES_IN - Used in auth controller, config/index.js
# - CLIENT_URL - Used in config/index.js, app.js CORS, email templates
# - PRODUCTION_URL - Used in config/index.js, payment callbacks
# - SITE_NAME - Used in email templates
# - SUPPORT_EMAIL - Used in email templates, contact forms
# 
# SERVICES:
# - GOOGLE_CLIENT_ID - Used in auth controller, config/index.js
# - GOOGLE_CLIENT_SECRET - Used in config/googleClient.js
# - GOOGLE_MAPS_API_KEY - Used in maps routes, config/index.js
# - SMTP_HOST/SMTP_PORT/SMTP_MAIL/SMTP_PASSWORD - Used in utils/sendEmail.js
# - ENABLE_EMAIL_NOTIFICATIONS - Used in config/index.js
# - CLOUDINARY_* - Used in utils/cloudinary.js, config/index.js
# - STRIPE_SECRET_KEY/STRIPE_WEBHOOK_SECRET - Used in payment controller, config/index.js
# 
# FEATURES:
# - ENABLE_CRON_JOBS - Used in server.js, config/index.js
# - ENABLE_IMAGE_QUALITY_VALIDATION - Used in config/index.js
# - LOG_LEVEL - Used in logger, config/index.js
# - DEBUG_AUTH - Used in config/index.js
